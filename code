import turtle 

ninja = turtle.Turtle()

ninja.speed(100)  
  
turtle.bgcolor("red")  
turtle.pensize(2)  
turtle.speed(0)  
  
while (True):  
    for i in range(6):  
        for colors in ["blue", "violet", "gold", "orange", "white", "gray"]:  
            turtle.color(colors)  
            turtle.circle(100)  
            turtle.left(10)  


turtle.hideturtle()  
turtle.mainloop()   
turtle.done()
